<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/primarySurface" />
            <stroke android:width="@dimen/chatlist_edit_hide_button_stroke" android:color="@color/primaryNeutralFill" />
            <corners android:radius="6.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primarySurfacePressed" />
            <stroke android:width="@dimen/chatlist_edit_hide_button_stroke" android:color="@color/primaryNeutralFill_pressed" />
            <corners android:radius="6.0dip" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/primarySurface" />
            <stroke android:width="@dimen/chatlist_edit_hide_button_stroke" android:color="@color/primaryNeutralFill" />
            <corners android:radius="6.0dip" />
        </shape>
    </item>
</selector>
