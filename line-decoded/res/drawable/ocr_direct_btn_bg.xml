<?xml version="1.0" encoding="utf-8"?>
<selector android:shape="rectangle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:id="@id/ocr_direct_btn_outline_on">
                <shape>
                    <corners android:radius="17.0dip" />
                    <stroke android:width="1.0dip" android:color="#00000000" />
                </shape>
            </item>
            <item android:id="@id/ocr_direct_btn_select_bg" android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip" android:drawableStart="@drawable/camera_ic_ocr_instant_on">
                <shape android:shape="rectangle">
                    <corners android:radius="17.0dip" />
                    <solid android:color="@color/linegreen" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:id="@id/ocr_direct_btn_outline" android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip" android:drawableStart="@drawable/camera_ic_ocr_instant_off">
                <shape>
                    <corners android:radius="17.0dip" />
                    <stroke android:width="1.5dip" android:color="@color/linewhite" />
                </shape>
            </item>
            <item android:id="@id/ocr_direct_btn_outline_in" android:left="2.5dip" android:top="2.5dip" android:right="2.5dip" android:bottom="2.5dip">
                <shape>
                    <corners android:radius="17.0dip" />
                    <stroke android:width="1.0dip" android:color="@color/linedim3" />
                </shape>
            </item>
            <item android:id="@id/ocr_direct_btn_outline_out">
                <shape>
                    <corners android:radius="17.0dip" />
                    <stroke android:width="1.0dip" android:color="@color/linedim3" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
