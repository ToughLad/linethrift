<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/gallery_doodle_img_brush_bg" />
            <item android:drawable="@drawable/gallery_doodle_img_brush_ring" />
            <item android:drawable="@drawable/gallery_doodle_img_circle_pressed" />
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@drawable/gallery_doodle_img_brush_bg" />
            <item android:drawable="@drawable/gallery_doodle_img_brush_ring" />
            <item android:drawable="@drawable/gallery_doodle_img_circle_normal" />
        </layer-list>
    </item>
    <item android:state_selected="false" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/gallery_doodle_img_brush_bg" />
            <item android:drawable="@drawable/gallery_doodle_img_circle_normal" />
        </layer-list>
    </item>
</selector>
