<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/linegreen_pressed" />
            <corners android:radius="@dimen/chat_skin_preview_button_corner_radius" />
        </shape>
    </item>
    <item>
        <selector android:enterFadeDuration="150" android:exitFadeDuration="150">
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/chat_skin_apply_button_background_disabled" />
                    <corners android:radius="@dimen/chat_skin_preview_button_corner_radius" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape>
                    <solid android:color="@color/chat_skin_apply_button_background_enabled" />
                    <corners android:radius="@dimen/chat_skin_preview_button_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</selector>
