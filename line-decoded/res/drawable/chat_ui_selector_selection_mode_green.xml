<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/chat_ui_editmode_bottom_button_radius" />
            <solid android:color="@color/primaryFill_pressed" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/chat_ui_editmode_bottom_button_radius" />
            <solid android:color="@color/quinaryFill" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/chat_ui_editmode_bottom_button_radius" />
            <solid android:color="@color/primaryFill" />
        </shape>
    </item>
</selector>
