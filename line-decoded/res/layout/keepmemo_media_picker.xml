    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/keepmemo_media_empty_view" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingStart="@dimen/v_menu_content_list_empty_view_horizontal_padding" android:paddingEnd="@dimen/v_menu_content_list_empty_view_horizontal_padding">
