<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/primaryBackground" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/keepmemo_media_recycler_view_container" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/keepmemo_media_direct_share_action_bar_container">
        <androidx.recyclerview.widget.RecyclerView android:id="@id/keepmemo_media_recycler_view" android:clipToPadding="false" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <include android:visibility="gone" layout="@layout/gallery_recyclerview_item_section_in_chat" />
